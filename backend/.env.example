# ================================================================
# Enhanced AI Task Automation Assistant (Vaani) - Configuration
# Production-Level Conversational AI with Voice & Memory
# ================================================================

# ================================================================
# CORE AI CONFIGURATION (REQUIRED)
# ================================================================

# Groq LLM Configuration (Primary AI Engine)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# ================================================================
# SERVER CONFIGURATION
# ================================================================

# FastAPI Backend
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# Streamlit Alternative UI
STREAMLIT_PORT=8501

# ================================================================
# CONVERSATIONAL AI & VOICE CONFIGURATION
# ================================================================

# Text-to-Speech Engine Selection
# Options: edge, coqui, pyttsx3, gtts
TTS_ENGINE=edge

# Voice Settings for Natural Conversation
VAANI_VOICE=en-US-AriaNeural
VAANI_VOICE_SPEED=1.0
VAANI_VOICE_PITCH=+0Hz

# Coqui TTS Model (Open Source Neural TTS)
COQUI_MODEL=tts_models/en/ljspeech/tacotron2-DDC

# Pyttsx3 System TTS Settings
PYTTSX3_RATE=180
PYTTSX3_VOLUME=0.9

# Voice Feedback Control
ENABLE_VOICE_FEEDBACK=true

# ================================================================
# SPEECH RECOGNITION CONFIGURATION
# ================================================================

# Speech Recognition Timeouts
SPEECH_TIMEOUT=7
SPEECH_PHRASE_TIME_LIMIT=15

# ================================================================
# AI AGENT CONFIGURATION
# ================================================================

# LLM Processing Settings
AGENT_TEMPERATURE=0.1
MAX_RESPONSE_TOKENS=1000

# Conversation Memory Limit
CONVERSATION_MEMORY_LIMIT=50

# ================================================================
# DATABASE CONFIGURATION (MONGODB)
# ================================================================

# MongoDB Connection (Free MongoDB Atlas or Local)
# For local: mongodb://localhost:27017
# For Atlas: mongodb+srv://username:password@cluster.mongodb.net
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=vaani_assistant

# ================================================================
# WHATSAPP INTEGRATION CONFIGURATION
# ================================================================

# WhatsApp API (Currently using wa.me URLs - No API key needed)
WHATSAPP_API_KEY=demo_whatsapp_api_key_12345
WHATSAPP_PHONE_NUMBER_ID=demo_phone_id_67890

# ================================================================
# OPTIONAL PREMIUM TTS SERVICES (Leave empty to use free options)
# ================================================================

# ElevenLabs (Premium - Leave empty for free alternatives)
ELEVENLABS_API_KEY=

# Azure Cognitive Services (Premium - Leave empty for free alternatives)
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=eastus

# ================================================================
# DEVELOPMENT & DEBUGGING
# ================================================================

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable Development Features
DEBUG_MODE=false

# ================================================================
# SETUP INSTRUCTIONS
# ================================================================

# 1. REQUIRED: Get your free Groq API key from https://console.groq.com/
# 2. OPTIONAL: Install MongoDB locally or use MongoDB Atlas (free tier)
# 3. The system will work with just Groq API key - all TTS engines are free
# 4. Edge TTS provides the best quality and is completely free
# 5. MongoDB enables conversation memory - system works without it too

# ================================================================
# FREE SERVICES USED (NO COST)
# ================================================================

# ✅ Groq LLM - Free tier with generous limits
# ✅ Microsoft Edge TTS - Completely free, high quality
# ✅ Coqui TTS - Open source, runs locally
# ✅ Pyttsx3 - System TTS, always available
# ✅ Google TTS - Free with reasonable limits
# ✅ MongoDB Atlas - Free tier available
# ✅ All speech recognition engines - Free

# ================================================================
# PRODUCTION DEPLOYMENT NOTES
# ================================================================

# For production deployment:
# 1. Use MongoDB Atlas for cloud database
# 2. Set ENABLE_VOICE_FEEDBACK=true for full experience
# 3. Use Edge TTS for best voice quality
# 4. Monitor Groq API usage for scaling
# 5. Consider Redis for session management in multi-user scenarios